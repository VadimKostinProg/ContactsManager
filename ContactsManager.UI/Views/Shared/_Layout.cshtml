<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/brands.min.css"
          integrity="sha512-9YHSK59/rjvhtDcY/b+4rdnl0V4LPDWdkKceBl8ZLF5TB6745ml1AfluEU6dFWqwDw9lPvnauxFgpKvJqp7jiQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <div class="page-content">
            <div class="margin-bottom">
                <div class="flex" id="top-bar-div">
                    <div class="flex-1" id="app-title-div">
                        <h1 class="app-title">
                            <i class="fa-solid fa-people-simple"></i>
                            Contact Manager
                        </h1>
                    </div>

                    <div class="flex-1 pr" id="search-box-div">
                        <div class="navbar account-links">
                            <ul>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        @User.Identity?.Name
                                    </li>
                                    <li>
                                        <a asp-controller="Home" asp-action="Index" asp-area="Admin">Admin</a>
                                    </li>
                                    <li>
                                        <a href="~/account/logout">Logout</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="~/account/register">Register</a>
                                        <a href="~/account/login">Login</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>


            <div class="navbar mb">
                <ul>
                    <li>
                        <a href="~/persons/index">Persons</a>
                        <a asp-controller="Countries" asp-action="UploadCountries">Upload Countries</a>
                    </li>
                </ul>
            </div>

            <div class="body">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
